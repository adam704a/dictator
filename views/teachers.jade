extends auth_layout

block content
	div(class="ui text container")
		h2(class="ui header") Teachers Starting Line
		div(class="ui three item menu" style="margin-bottom: 45px")
			a(class="active item" href="#") Starting Line
			a(class="item" href="/classes") Classes
			a(class="item" href="/resources") Resources
		
		div(class="ui form")
			div(class="field")
				input(type="text" placeholder="Enter Resource Title Here")
			div(class="field")
				textarea(placeholder="Type your new running dictation here.  Seperate each slide by pressing the return button.")
			div(class="two fields")
				div(class="field")
					label Tags
					input(type="text" placeholder="Enter Tags")
				div(class="field")
					label Class
					input(type="text" placeholder="Enter Classes")
			div(class="ui primary submit button") Submit
